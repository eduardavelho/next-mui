{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "es2019", "ES2016.Array.Include", "dom"],
    "baseUrl": "src",
    "outDir": ".",
    "declaration": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "importHelpers": true
  },
  "exclude": ["src/**/*.stories.ts", "src/**/*.stories.tsx"],
  "include": ["src"]
}
